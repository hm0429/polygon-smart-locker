  body
    #loading
      #spinner.d-flex.justify-content-center.align-items-center
        .spinner-border.text-primary(role="status")
          .sr-only
    #nav.navbar.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href="/") LOCK3R
        button#connect-wallet-button.btn.btn-outline-info(onclick="onConnectWalletButtonClick()")
          | Connect Wallet
        span#nav-info-wallet.text-info
    #main-container.container-fluid.mx-auto
      .row
        .col-sm-6.mx-auto
          #info-box-account.card.mt-3
            .card-header
              | Account
            .card-body
      .row
        #map-container.mt-3.d-flex.p-2
          #map



